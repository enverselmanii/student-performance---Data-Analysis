# Student Performance Analysis

import pandas as pd
import matplotlib.pyplot as plt

# --------------------------------------------------
# 1. Create the dataset
# --------------------------------------------------
data = {
    "Student": ["Ardi", "Besa", "Driton", "Elira", "Florian", "Genta"],
    "Gender": ["M", "F", "M", "F", "M", "F"],
    "Math": [85, 78, 92, 88, 70, 95],
    "Python": [80, 82, 90, 91, 65, 98],
    "Statistics": [78, 75, 88, 90, 60, 92],
    "Hours_Studied": [12, 10, 15, 14, 8, 16]
}

df = pd.DataFrame(data)
print("\nInitial DataFrame:")
print(df)

# --------------------------------------------------
# 2. Feature Engineering
# --------------------------------------------------
df["Average"] = df[["Math", "Python", "Statistics"]].mean(axis=1)
df["Passed"] = df["Average"] >= 80

print("\nAfter feature engineering:")
print(df)

# --------------------------------------------------
# 3. Filtering & Boolean Masking
# --------------------------------------------------
print("\nStudents who did not pass:")
print(df[df["Passed"] == False])

print("\nStudents who studied less than 10 hours:")
print(df[df["Hours_Studied"] < 10])

# --------------------------------------------------
# 4. GroupBy Analysis
# --------------------------------------------------
print("\nAverage grades by gender:")
print(df.groupby("Gender")[["Math", "Python", "Statistics"]].mean())

print("\nNumber of students who passed by gender:")
print(df.groupby("Gender")["Passed"].sum())

# --------------------------------------------------
# 5. Data selection using loc
# --------------------------------------------------
print("\nStudents with Math score > 80:")
print(df.loc[df["Math"] > 80, ["Student", "Math"]])

# --------------------------------------------------
# 6. Data Cleaning
# --------------------------------------------------
df = df.drop(df["Average"].idxmin())
df = df.sort_values(by="Average", ascending=False)
df = df.reset_index(drop=True)

print("\nCleaned and sorted DataFrame:")
print(df)

# --------------------------------------------------
# 7. BONUS â€“ Advanced filtering
# --------------------------------------------------
print("\nBonus filter (name contains 'F' and Average < 85):")
print(df.loc[
    (df["Student"].str.contains("F")) &
    (df["Average"] < 85)
])

# --------------------------------------------------
# 8. Visualization
# --------------------------------------------------
avg_gender = df.groupby("Gender")["Average"].mean()

plt.figure()
avg_gender.plot(kind="bar", title="Average Score by Gender")
plt.xlabel("Gender")
plt.ylabel("Average Score")
plt.show()
